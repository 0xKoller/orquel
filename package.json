{
  "name": "orquel-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:setup": "scripts/setup-tests.sh",
    "test:integration": "TEST_DATABASE_URL=postgresql://test:test123@localhost:5433/orquel_test turbo test",
    "test:performance": "TEST_DATABASE_URL=postgresql://test:test123@localhost:5433/orquel_test pnpm --filter=@orquel/core test -- benchmark",
    "clean": "turbo clean",
    "validate-examples": "scripts/validate-examples.sh",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^20.17.6",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "packages/*",
    "packages/adapters/*",
    "packages/integrations/*",
    "examples/*"
  ]
}