# Production Environment Variables
NODE_ENV=production
BUILD_STANDALONE=true

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://username:password@localhost:5432/your_production_database

# OpenAI Configuration  
OPENAI_API_KEY=your_production_openai_api_key

# Application Configuration
NEXT_PUBLIC_APP_NAME={{name}}
NEXT_PUBLIC_APP_DESCRIPTION="AI-powered knowledge base built with Orquel"

# Security
NEXTAUTH_SECRET=your_production_nextauth_secret_32_characters_minimum
NEXTAUTH_URL=https://your-domain.com
ADMIN_PASSWORD=your_secure_admin_password

# Rate Limiting (more restrictive in production)
RATE_LIMIT_REQUESTS=20

# Hybrid Search Configuration
DENSE_WEIGHT=0.7
LEXICAL_WEIGHT=0.3
HYBRID_METHOD=rrf

# CORS (restrict in production)
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=warn

# Optional: Redis for caching
REDIS_URL=redis://your-redis-instance:6379

# Optional: Enable telemetry
NEXT_TELEMETRY_DISABLED=0