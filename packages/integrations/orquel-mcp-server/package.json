{
  "name": "@orquel/mcp-server",
  "version": "0.3.0",
  "description": "MCP server integration for Orquel RAG toolkit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "orquel-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "xmcp dev",
    "serve": "xmcp serve",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rag",
    "retrieval",
    "orquel",
    "ai",
    "knowledge-base"
  ],
  "author": "0xKoller",
  "license": "MIT",
  "dependencies": {
    "@orquel/core": "workspace:*",
    "commander": "^12.1.0",
    "xmcp": "^0.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "@orquel/embeddings-openai": "workspace:*",
    "@orquel/store-memory": "workspace:*",
    "@orquel/store-pgvector": "workspace:*"
  }
}