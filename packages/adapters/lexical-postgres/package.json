{
  "name": "@orquel/lexical-postgres",
  "version": "0.2.0",
  "description": "PostgreSQL full-text search adapter for Orquel",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest"
  },
  "keywords": [
    "postgresql",
    "full-text-search",
    "lexical",
    "rag",
    "typescript"
  ],
  "author": "0xKoller",
  "license": "MIT",
  "dependencies": {
    "@orquel/core": "workspace:*",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "@orquel/core": "^0.1.0"
  }
}